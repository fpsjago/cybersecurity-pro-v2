  { id: 10, title: 'How Fortune 500 Bank Stopped APT Attack', excerpt: 'Real-world case study of preventing a sophisticated nation-state attack.', category: 'Case Studies', thumbnail: 'https://images.unsplash.com/photo-1541354329998-f4d9a9f9297f?w=600&h=400&fit=crop', date: 'Jan 2025', readTime: '12 min read', link: '#' },
