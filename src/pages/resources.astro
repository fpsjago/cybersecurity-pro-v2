  { id: 5, title: 'Cloud Security Best Practices for 2025', excerpt: 'Essential strategies for securing multi-cloud environments in the modern enterprise.', category: 'Blog', thumbnail: 'https://images.unsplash.com/photo-1451187580459-43490279c0fa?w=600&h=400&fit=crop', date: 'Jan 10, 2025', readTime: '9 min read', link: '#' },
  { id: 6, title: 'Incident Response Playbook: A Step-by-Step Guide', excerpt: 'Build an effective incident response plan with our proven framework.', category: 'Blog', thumbnail: 'https://images.unsplash.com/photo-1558494949-ef010cbdcc31?w=600&h=400&fit=crop', date: 'Dec 28, 2024', readTime: '15 min read', link: '#' },
  
