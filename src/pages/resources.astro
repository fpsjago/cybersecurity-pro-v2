  { id: 12, title: 'Retail Chain: $2M Annual Savings', excerpt: 'Achieving enterprise-grade security while reducing costs.', category: 'Case Studies', thumbnail: 'https://images.unsplash.com/photo-1556740749-887f6717d7e4?w=600&h=400&fit=crop', date: 'Nov 2024', readTime: '8 min read', link: '#' },
  
  // Webinars
  { id: 13, title: 'Live Demo: AI-Powered Threat Detection', excerpt: 'Watch our platform detect and respond to threats in real-time.', category: 'Webinars', thumbnail: 'https://images.unsplash.com/photo-1591115765373-5207764f72e7?w=600&h=400&fit=crop', date: 'Feb 15, 2025', readTime: '60 min', link: '#' },
  { id: 14, title: 'Webinar: Building a Security-First Culture', excerpt: 'Expert panel discussion on organizational security transformation.', category: 'Webinars', thumbnail: 'https://images.unsplash.com/photo-1515378791036-0648a3ef77b2?w=600&h=400&fit=crop', date: 'Feb 22, 2025', readTime: '45 min', link: '#' },
