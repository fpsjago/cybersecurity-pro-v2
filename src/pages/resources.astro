  { id: 7, title: 'Enterprise Threat Intelligence Report 2025', excerpt: 'In-depth analysis of global threat landscape and attack trends.', category: 'Whitepapers', thumbnail: 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=600&h=400&fit=crop', date: 'Jan 2025', readTime: '45 min read', link: '#' },
  { id: 8, title: 'CNAPP Buyer\'s Guide', excerpt: 'Comprehensive evaluation criteria for selecting a cloud-native application protection platform.', category: 'Whitepapers', thumbnail: 'https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=600&h=400&fit=crop', date: 'Dec 2024', readTime: '30 min read', link: '#' },
  { id: 9, title: 'ROI of AI-Powered Security Operations', excerpt: 'Data-driven analysis of cost savings and efficiency gains.', category: 'Whitepapers', thumbnail: 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=600&h=400&fit=crop', date: 'Nov 2024', readTime: '25 min read', link: '#' },
  
