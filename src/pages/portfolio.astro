<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Portfolio - CyberSec Pro</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: #0a0e1a;
      color: #f8fafc;
      line-height: 1.5;
    }

    .container {
      max-width: 1280px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    .section {
      padding: 6rem 0;
    }

    /* Hero */
    .hero {
      background: linear-gradient(135deg, #0a0e1a 0%, #1e3a8a 100%);
      padding: 8rem 0 4rem;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .hero::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        radial-gradient(circle at 20% 50%, rgba(6, 182, 212, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 50%, rgba(59, 130, 246, 0.1) 0%, transparent 50%);
    }

    .hero-content {
      position: relative;
      z-index: 1;
    }

    .hero-badge {
      display: inline-block;
      padding: 0.5rem 1rem;
      background: rgba(6, 182, 212, 0.1);
      border: 1px solid rgba(6, 182, 212, 0.2);
      border-radius: 9999px;
      font-size: 0.875rem;
      font-weight: 600;
      color: #06b6d4;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 1.5rem;
    }

    .hero h1 {
      font-size: 3.75rem;
      font-weight: 800;
      line-height: 1.1;
      margin-bottom: 1.5rem;
      letter-spacing: -0.025em;
    }

    .hero-highlight {
      background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .hero p {
      font-size: 1.25rem;
      color: #94a3b8;
      max-width: 800px;
      margin: 0 auto;
      line-height: 1.625;
    }

    /* Section Header */
    .section-header {
      text-align: center;
      margin-bottom: 3rem;
    }

    .section-badge {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      background: rgba(6, 182, 212, 0.1);
      border: 1px solid rgba(6, 182, 212, 0.2);
      border-radius: 9999px;
      font-size: 0.75rem;
      font-weight: 600;
      color: #06b6d4;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 1rem;
    }

    .section-title {
      font-size: 2.25rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }

    .section-subtitle {
      font-size: 1.125rem;
      color: #94a3b8;
      max-width: 700px;
      margin: 0 auto;
    }

    /* Metrics Grid */
    .metrics-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 2rem;
      margin-bottom: 4rem;
    }

    /* Case Studies */
    .case-studies-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 3rem;
      margin: 3rem 0;
    }

    /* Testimonials Grid */
    .testimonials-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }

    /* CTA Section */
    .cta-section {
      background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);
      padding: 4rem 2rem;
      border-radius: 16px;
      text-align: center;
      margin: 4rem 0;
    }

    .cta-section h2 {
      font-size: 2.25rem;
      font-weight: 700;
      margin-bottom: 1rem;
      color: #fff;
    }

    .cta-section p {
      font-size: 1.125rem;
      color: rgba(255,255,255,0.9);
      margin-bottom: 2rem;
    }

    .cta-button {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 1rem 2rem;
      background: #fff;
      color: #06b6d4;
      font-weight: 600;
      border-radius: 8px;
      text-decoration: none;
      transition: all 0.2s ease;
    }

    .cta-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    @media (max-width: 768px) {
      .hero h1 { font-size: 2.5rem; }
      .metrics-grid { grid-template-columns: repeat(2, 1fr); }
      .testimonials-grid { grid-template-columns: 1fr; }
    }
  </style>
</head>
<body>
  <!-- Hero -->
  <section class="hero">
    <div class="container hero-content">
      <span class="hero-badge">Success Stories</span>
      <h1>
        Real Results from<br/>
        <span class="hero-highlight">Real Customers</span>
      </h1>
      <p>
        See how organizations across industries use CyberSec Pro to stop threats, 
        achieve compliance, and protect what matters most.
      </p>
    </div>
  </section>

  <!-- Aggregate Metrics -->
  <section class="section">
    <div class="container">
      <div class="section-header">
        <span class="section-badge">Impact</span>
        <h2 class="section-title">Results Across All Customers</h2>
      </div>
      <div class="metrics-grid">
        {aggregateMetrics.map(metric => (
          <MetricCard client:load {...metric} />
        ))}
      </div>
    </div>
  </section>

  <!-- Filters -->
  <section class="section">
    <div class="container">
      <FilterBar 
        client:load
        categories={['Finance', 'Healthcare', 'Technology', 'Retail', 'Manufacturing', 'Government']}
        onFilter={(category) => console.log('Filter:', category)}
      />
    </div>
  </section>

  <!-- Case Studies -->
  <section class="section">
    <div class="container">
      <div class="case-studies-grid">
        {caseStudies.map(study => (
          <CaseStudyCardLarge client:load {...study} />
        ))}
      </div>
    </div>
  </section>

  <!-- Client Testimonials -->
  <section class="section">
    <div class="container">
      <div class="section-header">
        <span class="section-badge">Testimonials</span>
        <h2 class="section-title">What Our Clients Say</h2>
      </div>
      <div class="testimonials-grid">
        {clientTestimonials.map(testimonial => (
          <ClientTestimonialCard client:load {...testimonial} />
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section">
    <div class="container">
      <div class="cta-section">
        <h2>Ready to Join Our Success Stories?</h2>
        <p>Let's discuss how CyberSec Pro can protect your organization</p>
        <a href="/contact" class="cta-button">
          Schedule a Demo
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M7.5 15l5-5-5-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>
    </div>
  </section>
</body>
</html>
